<!DOCTYPE html>
<html>
<head>

  <title><%= author %>'s Factogram</title>

  <!-- CSS -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/font-awesome.min.css">
  <link href='https://fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/card.css">

  <!-- icon -->
  <link rel="icon" type="image/png" href="/img/eu-wtf-circle.png">

  <!-- JS -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <!-- <script src="/js/jquery.js"></script> -->
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <script src="/js/jquery-image-blob.min.js"></script>

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@referendum_wtf">
  <meta name="twitter:creator" content="@referendum_wtf">
  <meta name="twitter:title" content="<%= author %>'s Factogram">
  <meta name="twitter:description" content="Fact: <%= text %>">
  <meta name="twitter:image" content="<%= imageUrl %>">

  <!-- Facebook -->
  <meta property="og:url"           content="<%= cardUrl %>">
  <meta property="og:type"          content="website">
  <meta property="og:title"         content="<%= author %>'s Factogram">
  <meta property="og:description"   content="Fact: <%= text %>">
  <meta property="og:image"         content="<%= imageUrl %>" />
  <!-- <meta property="og:image"         content="http://referendum-wtf-develop.herokuapp.com/img/generate/nigel.jpg"> -->
  <meta property="og:image:width" content="800">
  <meta property="og:image:height" content="380">

  <!-- Not sure what these are for? -->
  <!-- <link rel="image_src" type="image/jpeg" href="<%= imageUrl %>" /> -->
  <!-- <link rel="image_src" type="image/jpeg" href="http://referendum-wtf-develop.herokuapp.com/img/generate/nigel.jpg" /> -->

</head>

<body>
  <div class="card">
    <h3>Here's your Factogram, <%= author %>!</h3>
    <img src="<%= imageUrl %>" alt="<%= text %>">
    <a target="_blank" href="<%= tweet %>" class="btn btn-lg btn-default">
      <i class="fa fa-twitter" aria-hidden="true"></i> Tweet-o-gram
    </a>
    <button class="btn btn-lg btn-default ig-button">
      <i class="fa fa-facebook" aria-hidden="true"></i> Factbook
    </button>
    <button class="btn btn-lg btn-default ig-button">
      <i class="fa fa-instagram" aria-hidden="true"></i> Instafact
    </button>
  </div>

  <img id="instaImage" crossOrigin="Anonymous" src="<%= imageUrl %>" style="display:none;">

  <script>

    $(".fb-button").on("click",function(){
        var fbpopup = window.open("https://www.facebook.com/sharer/sharer.php?u=<%= cardUrl %>", "pop", "width=600, height=400, scrollbars=no");
        return false;
    });

    $('.ig-button').click(function()
    {
      var blob = $('#instaImage').imageBlob('image/jpeg').blob()
      var downloadURL = URL.createObjectURL(blob)
      window.open(downloadURL, '_blank')
    })

  </script>
</body>
</html>
